<body>
    <!-- Particles background -->
    <div class="particles" id="particles"></div>

    <!-- Flowing ribbon -->
    <div class="ribbon">
        <svg class="ribbon-path" viewBox="0 0 1000 1000" preserveAspectRatio="none">
            <path d="M 0,500 Q 250,300 500,500 T 1000,500"
                  stroke="#c44569"
                  stroke-width="80"
                  fill="none"
                  opacity="0.3">
                <animate attributeName="d"
                         dur="15s"
                         repeatCount="indefinite"
                         values="M 0,500 Q 250,300 500,500 T 1000,500;
                                 M 0,500 Q 250,700 500,500 T 1000,500;
                                 M 0,500 Q 250,300 500,500 T 1000,500"/>
            </path>
        </svg>
    </div>

    <!-- White overlay -->
    <div class="white-overlay" id="whiteOverlay"></div>

    <!-- Growing text -->
    <div class="growing-text" id="growingText">
        This is The Unknowable: An operatic ballet where voice and movement become one, where Rossen, Berlioz, and Mahler sing of summer nights and wandering souls.
    </div>

    <!-- Title text -->
    <div class="title-text" id="titleText">The Unknowable</div>

    <!-- Scroll container -->
    <div class="scroll-container" id="scrollContainer">
        <!-- Section 1 -->
        <div class="text-section">
            <div class="text-content">
                <div class="text-line">What happens when you cannot know yourself?</div>
            </div>
        </div>

        <!-- Section 2 -->
        <div class="text-section">
            <div class="text-content">
                <div class="text-line">When the weight of ambition becomes unbearable,</div>
                <div class="text-line">and familial expectations press from all sidesâ€”</div>
            </div>
        </div>

        <!-- Section 3 -->
        <div class="text-section">
            <div class="text-content">
                <div class="text-line">Do you retreat into dream?</div>
                <div class="text-line">Or confront the unknowable within?</div>
            </div>
        </div>

    </div>

    <!-- Transition overlay -->
    <div class="transition-overlay" id="transitionOverlay"></div>

    <script>
        // Create particles
        const particlesContainer = document.getElementById('particles');
        const particleCount = 50;

        for (let i = 0; i < particleCount; i++) {
            const particle = document.createElement('div');
            particle.className = 'particle';
            particle.style.left = Math.random() * 100 + '%';
            particle.style.top = Math.random() * 100 + '%';
            particle.style.setProperty('--tx', (Math.random() - 0.5) * 20);
            particle.style.setProperty('--ty', (Math.random() - 0.5) * 20);
            particle.style.animationDelay = Math.random() * 15 + 's';
            particle.style.animationDuration = (10 + Math.random() * 10) + 's';
            particlesContainer.appendChild(particle);
        }

        // Scroll effects
        const textSections = document.querySelectorAll('.text-section');
        const textLines = document.querySelectorAll('.text-line');
        const growingText = document.getElementById('growingText');
        const whiteOverlay = document.getElementById('whiteOverlay');
        const titleText = document.getElementById('titleText');
        const finalSection = document.getElementById('finalSection');
        const transitionOverlay = document.getElementById('transitionOverlay');

        let hasTransitioned = false;
        let growthTriggered = false;
        let maxFontSize = 2; // Start at 2rem
        let whiteOpacity = 0;
        let autoAnimating = false;

        function updateScroll() {
            const scrollPercent = window.scrollY / (document.documentElement.scrollHeight - window.innerHeight);
            const windowHeight = window.innerHeight;
            const scrollY = window.scrollY;

            // Reveal text lines
            textLines.forEach(line => {
                const rect = line.getBoundingClientRect();
                if (rect.top < windowHeight * 0.8) {
                    line.classList.add('visible');
                }
            });

            // Fade in text at 70% scroll
            if (scrollPercent >= 0.7 && !growthTriggered) {
                growingText.classList.add('active');
                if (scrollPercent < 0.9) {
                    growingText.style.fontSize = '2rem'; // Keep at initial size
                }
            }

            // Trigger growth at 90% scroll (one-directional, irreversible)
            if (scrollPercent >= 0.9 && !growthTriggered) {
                growthTriggered = true;
                growingText.classList.add('active');
                startAutoGrowth();
            }
        }

        // Automatic growth animation after trigger
        function startAutoGrowth() {
            if (autoAnimating) return;
            autoAnimating = true;

            let startTime = null;
            const duration = 4000; // 4 seconds to grow
            const maxSize = 150; // Maximum font size
            const startSize = maxFontSize;

            function animate(timestamp) {
                if (!startTime) startTime = timestamp;
                const progress = (timestamp - startTime) / duration;

                if (progress < 1) {
                    // Exponential growth for dramatic effect
                    const currentSize = startSize + (maxSize - startSize) * Math.pow(progress, 1.5);
                    maxFontSize = currentSize;
                    growingText.style.fontSize = currentSize + 'rem';

                    // White overlay grows with text
                    whiteOpacity = Math.min(1, Math.pow(progress, 0.8));
                    whiteOverlay.style.opacity = whiteOpacity;

                    requestAnimationFrame(animate);
                } else {
                    // Final state
                    maxFontSize = maxSize;
                    growingText.style.fontSize = maxSize + 'rem';
                    whiteOverlay.style.opacity = 1;

                    // Show title after white fills screen
                    setTimeout(() => {
                        showTitle();
                    }, 500);
                }
            }

            requestAnimationFrame(animate);
        }

        // Show title text emerging from white
        function showTitle() {
            let startTime = null;
            const duration = 2000; // 2 seconds fade in

            function fadeIn(timestamp) {
                if (!startTime) startTime = timestamp;
                const progress = (timestamp - startTime) / duration;

                if (progress < 1) {
                    titleText.style.opacity = progress;
                    requestAnimationFrame(fadeIn);
                } else {
                    titleText.style.opacity = 1;
                    titleText.classList.add('visible');

                    // After title is visible, wait then transition
                    setTimeout(() => {
                        if (!hasTransitioned) {
                            hasTransitioned = true;
                            setCookie('intro_seen', 'true', 365);
                            transitionToMain();
                        }
                    }, 2000);
                }
            }

            requestAnimationFrame(fadeIn);
        }

        function transitionToMain() {
            transitionOverlay.classList.add('active');
            setTimeout(() => {
                window.location.href = 'Highlights';
            }, 1000);
        }

        function setCookie(name, value, days) {
            const expires = new Date();
            expires.setTime(expires.getTime() + days * 24 * 60 * 60 * 1000);
            document.cookie = name + '=' + value + ';expires=' + expires.toUTCString() + ';path=/';
        }

        function getCookie(name) {
            const nameEQ = name + '=';
            const ca = document.cookie.split(';');
            for (let i = 0; i < ca.length; i++) {
                let c = ca[i];
                while (c.charAt(0) === ' ') c = c.substring(1, c.length);
                if (c.indexOf(nameEQ) === 0) return c.substring(nameEQ.length, c.length);
            }
            return null;
        }

        // Check cookie on load
        window.addEventListener('load', () => {
            if (getCookie('intro_seen') === 'true') {
                window.location.href = 'Highlights';
            }
        });

        // Scroll listener
        window.addEventListener('scroll', updateScroll);
        updateScroll(); // Initial call
    </script>
</body>
</html>
