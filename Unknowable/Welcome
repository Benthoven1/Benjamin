    <link href="https://fonts.googleapis.com/css2?family=Cormorant+Garamond:wght@300;400;600;700&family=Montserrat:wght@300;400;600;700&display=swap" rel="stylesheet">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Cormorant Garamond', serif;
            background: linear-gradient(135deg, #1a0a2e 0%, #3d1f5c 50%, #2d1847 100%);
            color: #fff;
            overflow-x: hidden;
            position: relative;
        }

        /* Animated particles background */
        .particles {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            pointer-events: none;
            z-index: 0;
        }

        .particle {
            position: absolute;
            width: 3px;
            height: 3px;
            background: radial-gradient(circle, #ff6b9d 0%, #c44569 100%);
            border-radius: 50%;
            animation: float 15s infinite ease-in-out;
            opacity: 0.6;
        }

        @keyframes float {
            0%, 100% {
                transform: translate(0, 0) scale(1);
                opacity: 0.6;
            }
            50% {
                transform: translate(calc(var(--tx) * 1vw), calc(var(--ty) * 1vh)) scale(1.5);
                opacity: 1;
            }
        }

        /* Flowing ribbon effect */
        .ribbon {
            position: fixed;
            width: 200%;
            height: 100%;
            top: 0;
            left: -50%;
            pointer-events: none;
            z-index: 1;
            opacity: 0.15;
        }

        .ribbon-path {
            position: absolute;
            width: 100%;
            height: 100%;
        }

        /* Scroll container */
        .scroll-container {
            position: relative;
            z-index: 2;
            min-height: 500vh;
        }

        /* Text sections */
        .text-section {
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 2rem;
            position: relative;
        }

        .text-content {
            max-width: 800px;
            text-align: center;
            transition: all 0.5s cubic-bezier(0.4, 0, 0.2, 1);
        }

        .text-line {
            font-size: 1.5rem;
            line-height: 1.8;
            margin: 1rem 0;
            opacity: 0;
            transform: translateY(30px);
            transition: all 0.8s cubic-bezier(0.4, 0, 0.2, 1);
        }

        .text-line.visible {
            opacity: 1;
            transform: translateY(0);
        }

        /* Growing text effect - 17776 style */
        .growing-text {
            position: fixed;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            font-family: 'Cormorant Garamond', serif;
            font-weight: 400;
            text-align: center;
            white-space: normal;
            max-width: 90%;
            pointer-events: none;
            z-index: 10;
            opacity: 0;
            font-size: 2rem;
            line-height: 1.4;
            color: #ffffff;
        }

        .growing-text.active {
            opacity: 1;
        }

        /* White overlay that grows with text */
        .white-overlay {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: #ffffff;
            z-index: 9;
            opacity: 0;
            pointer-events: none;
        }

        /* Title text that appears after white fills screen */
        .title-text {
            position: fixed;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            font-family: 'Cormorant Garamond', serif;
            font-weight: 700;
            text-align: center;
            white-space: nowrap;
            pointer-events: none;
            z-index: 15;
            opacity: 0;
            font-size: 4rem;
            color: #1a0a2e;
            letter-spacing: 2px;
        }

        .title-text.visible {
            opacity: 1;
        }

        /* Transition overlay */
